<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="http://localhost:3000/css/style.css">
</head>
<body>
    <header>
        <h1>Consulta de clientes</h1>
    </header>
    <main>
        <form name="excluir" action="/passeioss/remover?_method=DELETE" method="post">>
            <table border="1">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="checkBoxAll"> </th>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>E-mail</th>
                        <th>Sexo</th>
                        <th>Etnia</th>
                        <th>Data de Nascimento</th>
                        <th>Documento de identificação</th>
                        <th>Descrição</th>
                </thead>
                <tbody>
                    <% passeios.forEach((passeio)=> { %>
                        <tr>
                            <td align="center"> <input type="checkbox" name="id" value="<%= passeio.id %>"> </td>
                            <td> <a href="/passeios/form/<%= passeio.id %>">
                                    <%= passeio.nome %>
                                </a></td>
                            <td>
                                <%= passeio.telefone %>
                            </td>
                            <td>
                                <%= passeio.email %>
                            </td>
                            <td>
                                <%= passeio.sexo %>
                            </td>
                            <td>
                                <%= passeio.etnia %>
                            </td>
                            <td>
                                <%= passeio.datanas %>
                            </td>
                            <td>
                                <%= passeio.documento %>
                            </td>
                            <td>
                                <%= passeio.descricao_cliente %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <input type="submit" value="Excluir" />
        </form>
    </main>
    <footer>
        <ul>
            <li><a href=""http://localhost:3000/menuPrincipal.ejs">Voltar</a></li>
            <li><a href="/formAtualiza.ejs">Atualizar Passeios</a></li>
        </ul>
    </footer>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js">
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            // add multiple select / deselect functionality
            $("#checkBoxAll").click(function () {
                $('.checkBox').attr('checked', this.checked);
            });
            // if all checkbox are selected, check the selectall checkbox  also        

            $(".checkBox").click(function () {
                if ($(".checkBox").length == $(".checkBox:checked").length) {
                    $("#checkBoxAll").attr("checked", "checked");
                }
                else {
                    $("#checkBoxAll").removeAttr("checked");
                }
            });
        });
    </script>
</body>
</html>